<div class="modal" id="new_note_modal">
<%= form_for [@project,@new_transition] do |f| %>
  <div class="modal-header">
    <h3>New Note</h3>
  </div>
  <div class="modal-body">
	<div class="value">
    	<%= f.text_area :comment, :rows => 10, :cols => 40 %>
	</div>
  </div>
  <div class="modal-footer">
	<button type="submit" class="button">Add Note</button>
    <a href="#" data-dismiss="modal">Cancel</a>
  </div>
<% end %>
</div>