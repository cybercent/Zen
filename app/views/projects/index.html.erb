<h1>Projects</h1>
<div id="projects" class="main-content">
	<div class="header">
		<%= link_to 'Add new deal', '#new_project_modal', :class => "button", :"data-toggle" => "modal" %>
		<form id="project-search-form" action="#">
			<input type="text" placeholder="Search Deals">
		</form>
	</div>
	<div class="inner">
		<ul class="projects ui-sortable">
			<% @projects.each do |project| %>
				<%= render :partial => 'project', :object => project %>
			<% end %>
			<% if @projects.empty? %>
			<li class="empty">It looks like you donâ€™t have any active deals. <a href="#new_project_modal" data-toggle="modal">Add a deal.</a></li>
			<% end %>
		</ul>
	</div>
	<div class="footer">
		<div class="button-container">
			<%= link_to 'View Completed Deals', completed_projects_path, :class => "button" %>
		</div>
	</div>
</div>

<div id="sidebar">
	<div class="wrapper">
		<div class="inner">
			<dl class="metrics">
				<dt>Active deals</dt>
				<dd class="projects-count"><%= @active_projects_count %></dd>
				<dt>Active deals value</dt>
				<dd class="projects-value"><%= formatted_exact_value(@active_projects_value) %></dd>
			</dl>
			<div class="buttons">
				<div class="button-container">
					<%= link_to 'More Metrics', metrics_path, :class => "button" %>
				</div>
			</div>
		</div>
	</div>
	
	<div class="wrapper">
		<div class="inner">
			<div class="subscription">
				<p>You've got <strong class="free-projects"><%= @free_projects %></strong> free projects left. Need more?</p>
				<div class="buttons">
					<div class="button-container">
						<%= link_to 'Upgrade Now', subscription_path, :class => "button" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%= render :partial => "new_modal" %>